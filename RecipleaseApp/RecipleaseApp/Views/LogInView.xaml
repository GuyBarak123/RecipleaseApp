<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipleaseApp.Views.LogInView">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="CornflowerBlue" >
                <StackLayout>
                    
                    <Entry x:Name="Email" Text="{Binding Email}" Placeholder="Enter Email" FontFamily=""  
                           Keyboard="Email"  />

                    <Entry x:Name="Password" Text="{Binding Password}" Placeholder="Enter Password"  
                          />
                    <Label Text="{Binding ErrorMes}"/>
                </StackLayout>
            </Frame>
            <Button Command="{Binding SubmitCommand}" Text="Login"  /> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>