<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipleaseApp.Views.ShowRecipeView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Title}" HorizontalTextAlignment="Center" FontSize="Large"/>
            <Image Source="{Binding FrontImageUrl}" WidthRequest="400" HeightRequest="400"/>
            <Label Text="{Binding RecipeDescription }" HorizontalTextAlignment="Center" FontSize="Caption"/>
            <Label Text="{Binding Instructions}" HorizontalTextAlignment="Center" FontSize="Body"/>
            <Label Text="{Binding Ingredients}" HorizontalTextAlignment="Center" FontSize="Body"/>
          
            <Label Text="{Binding Tag }" HorizontalTextAlignment="Center" FontSize="Body"/>
            




        </StackLayout>
    </ContentPage.Content>
</ContentPage>